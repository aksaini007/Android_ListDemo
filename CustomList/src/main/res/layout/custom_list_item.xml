<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_channel_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/channel_logo" />

    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_channel_logo"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_channel_logo"
        android:layout_toRightOf="@+id/img_channel_logo"
        android:text="DailySocial"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_channel_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_channel_logo"
        android:layout_toRightOf="@+id/img_channel_logo"
        android:text="11 Sep at 6:31pm" />

    <ImageView
        android:id="@+id/img_options"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_channel_name"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_down" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_channel_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="How many did you know?"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_heading"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/post" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_post"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="We Bet You missed These 5 Historical References In The Baahubali Series"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_instant"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignLeft="@+id/tv_description"
        android:layout_alignStart="@+id/tv_description"
        android:layout_below="@+id/tv_description"
        app:srcCompat="@drawable/fb_globe" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_instant"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/img_instant"
        android:layout_toRightOf="@+id/img_instant"
        android:text="DailySocial" />

    <View
        android:id="@+id/vw_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_link"
        android:layout_margin="10dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/rel_likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vw_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_like1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/fb_haha" />

        <ImageView
            android:id="@+id/img_like2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/img_like1"
            app:srcCompat="@drawable/fb_heart" />

        <ImageView
            android:id="@+id/img_like3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/img_like2"
            app:srcCompat="@drawable/fb_like" />

        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_like3"
            android:text="2k"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_likes"
            android:layout_alignBottom="@+id/tv_likes"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="500 Comments . 1k Shares"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:id="@+id/vw_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rel_likes"
        android:layout_margin="10dp"
        android:background="#cccccc" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/vw_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">

            <TextView
                android:text="Like"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#444444"/>

            <TextView
                android:text="Comment"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#444444"/>

            <TextView
                android:text="Share"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#444444"/>

        </TableRow>

    </TableLayout>


</RelativeLayout>